version: '3.3'

services:
  mongo:
    image: mongo:3.6
    restart: always    
    hostname: mongo
    ports:
      - '27017:27017'
    volumes:
      - mongodata:/data/db
            
  redis:
    container_name: some-redis
    image: redis:4-alpine
    ports:
      - '6379:6379'
    volumes:
      - redisdata:/data
      
  data-service:
    image: sairamkrish/temp1
    links:
      - mongo
    environment:
       - SPRING_DATA_MONGODB_HOST=mongo
    depends_on:
      - mongo
      - redis
    ports:
      - "8080:8080"
      
volumes:
  mongodata:
  redisdata:     